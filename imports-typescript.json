{
  "extends": ["plugin:import/recommended", "plugin:import/typescript"],
  "rules": {
    "import/no-unresolved": "warn",
    "prefer-const": "off",
    "import/order": [
      "warn",
      {
        "newlines-between": "always-and-inside-groups",
        "pathGroups": [
          {
            "pattern": "utils",
            "group": "internal"
          },
          {
            "pattern": "utils/**",
            "group": "internal"
          }
        ],
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling"],
          "index",
          "object",
          "type"
        ]
      }
    ]
  }
}

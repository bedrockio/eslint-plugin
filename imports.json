{
  "extends": ["plugin:import/recommended"],
  "rules": {
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "parent",
          "index",
          "internal",
          "sibling"
        ],
        "newlines-between": "always-and-inside-groups",
        "pathGroups": [
          {
            "pattern": "semantic",
            "group": "external"
          }
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
